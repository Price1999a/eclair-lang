// RUN: mkdir -p %t && sed s@TEST_DIR@%t@g %s > %t/input.test
// RUN: split-file %t/input.test %t

// RUN: %eclair compile %t/program.eclair 2> %t/actual.out
// RUN: diff -w %t/expected.out %t/actual.out

//--- program.eclair
@def fact1(u32, u32).
@def fact2(u32).
fact2(x) :-
  fact1(x, _),
  x = "abc".

@def fact3(u32, u32).
@def fact4(u32).
fact4(x) :-
  fact3(x, _),
  "abc" = x.

@def fact5(string, string).
@def fact6(string).
fact6(x) :-
  fact5(x, _),
  x = 1.

@def fact7(string, string).
@def fact8(string).
fact8(x) :-
  fact7(x, _),
  1 = x.

@def fact9(string, u32).
@def fact10(string).
fact10(x) :-
  fact9(x, y),
  x = y.

@def fact11(u32, string).
@def fact12(u32).
fact12(x) :-
  x = y,
  fact11(x, z),
  y = z.

@def fact13(u32, string).
@def fact14(u32).
fact14(x) :-
  x = y,
  y = z,
  fact13(x, z).

@def fact15(u32, string).
@def fact16(u32).
fact16(x) :-
  x = y,
  y = z,
  z = a,
  fact15(x, a).

@def fact17(u32, string).
@def fact18(u32).
fact18(x) :-
  x = y,
  y = z,
  fact17(x, a),
  z = a.

