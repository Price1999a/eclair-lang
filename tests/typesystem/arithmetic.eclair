// RUN: mkdir -p %t && sed s@TEST_DIR@%t@g %s > %t/input.test
// RUN: split-file %t/input.test %t

//--- program1.eclair
// RUN: %eclair compile --emit ra %t/program1.eclair | FileCheck %t/program1.eclair
// CHECK: project

@def number(u32) input.
@def arithmetic(u32) output.

arithmetic(123 + 456).
arithmetic(456 - 123).
arithmetic(123 * 456).
arithmetic(123 / 456).
arithmetic(123 * 456 + 789).

arithmetic(x) :-
  number(x),
  x = 123 + (456 * 789).

