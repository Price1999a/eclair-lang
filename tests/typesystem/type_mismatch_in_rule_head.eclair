//--- program.eclair
@def edge(u32, u32).
@def reachable(u32, u32).
reachable(x, "abc") :-
  edge(x, x).
reachable("abc", x) :-
  edge(x, x).
reachable("abc", "abc") :-
  edge(x, x).

@def fact1(u32).
@def fact2(u32, string).
fact2(x, x) :-
  fact1(x).

